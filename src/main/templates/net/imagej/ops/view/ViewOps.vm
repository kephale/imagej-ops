package net.imagej.ops.view;

import net.imagej.ops.Ops;

/**
 * Static utility class containing built-in ops interfaces.
 * <p>
 * These interfaces are intended to mark all ops using a particular name,
 * regardless of the area of functionality. For example, all ops called "view"
 * would be marked by implementing the {@code Ops.View} interface, and
 * annotating them with:
 * </p>
	 * <pre>
	 * @Plugin(type = Ops.View.class, name = Ops.View.NAME)
	 * </pre>
 *
 * @author Tim-Oliver Buchholz (University of Konstanz)
 */
public final class ViewOps {

	private ViewOps() {
		// NB: Prevent instantiation of utility class.
	}
#foreach ($op in $ops)

	/**
	 * Interface marking implementations of {@link Ops.View}
	 */
	public interface ${op.iface} extends ${op.extends} {
		// NB: Marker interface
	}
#end

}
